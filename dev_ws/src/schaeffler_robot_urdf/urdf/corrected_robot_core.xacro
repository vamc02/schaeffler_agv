<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>
	
    <material name="red">
        <color rgba="1 0 0 1" />
    </material>


    <!-- BASE LINK -->

    <link name="base_link">
	<origin xyz="0 0 0" />
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.5 0 -0.025" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.5 0 0.1" />
            <geometry>
                <box size="1 0.7 0.2" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.5 0 0.1" />
            <geometry>
                <box size="1 0.7 0.2" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="50" x="1" y="0.7" z="0.2">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>


    <gazebo reference="chassis">
	<material>Gazebo/white</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.35 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.08" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.04" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
	<material>Gazebo/blue</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.35 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.08" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.04" radius="0.08">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
	<material>Gazebo/blue</material>
    </gazebo>


    <!-- CASTER WHEEL LINKS -->

    <!-- caster_wheel_joint_fl LINK -->

    <joint name="caster_wheel_joint_fl" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel_fl" />
        <origin xyz="0.9 0.3 -0.025" />
    </joint>

    <link name="caster_wheel_fl">
        <visual>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="black" />
        </visual>
	<collision>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>
	 <xacro:inertial_sphere mass="1" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_fl">
	<material>Gazebo/black</material>
    </gazebo>

 <!-- caster_wheel_joint_fr LINK -->

    <joint name="caster_wheel_joint_fr" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel_fr" />
        <origin xyz="0.9 -0.3 -0.025" />
    </joint>

    <link name="caster_wheel_fr">
        <visual>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="black" />
        </visual>
	<collision>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>
	<xacro:inertial_sphere mass="1" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_fr">
	<material>Gazebo/black</material>
    </gazebo>

 <!-- caster_wheel_joint_bl LINK -->

    <joint name="caster_wheel_joint_bl" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel_bl" />
        <origin xyz="0.1 0.3 -0.025" />
    </joint>

    <link name="caster_wheel_bl">
        <visual>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="black" />
        </visual>
	<collision>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>
`	<xacro:inertial_sphere mass="1" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_bl">
	<material>Gazebo/black</material>
    </gazebo>

 <!-- caster_wheel_joint_br LINK -->

    <joint name="caster_wheel_joint_br" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel_br" />
        <origin xyz="0.1 -0.3 -0.025" />
    </joint>

    <link name="caster_wheel_br">
        <visual>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="black" />
        </visual>
	<collision>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>
	<xacro:inertial_sphere mass="1" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_br">
	<material>Gazebo/black</material>
    </gazebo>

</robot>
